{
  "name": "storyflow",
  "version": "1.0.0",
  "description": "StoryFlow - Platform for reading and rating AI-generated stories",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "vercel-build": "npm run prisma:generate && npm run prisma:migrate:deploy && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "server:dev": "ts-node --transpile-only server/index.ts"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@heroicons/react": "^2.0.18",
    "@next/font": "^14.0.0",
    "@prisma/client": "^6.14.0",
    "@stripe/stripe-js": "^7.8.0",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.0.0",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.0"
  }
}
